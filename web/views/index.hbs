{{#if valid}}
    <script>
        window.location.pathname = '/bot/';
    </script>
{{else}}
    <form id="login_form" action="/" method="get">
        <label for="token" id="token_label">Login</label><br>
        <div class="text-align-left margin-bottom-20">
            <h5 class="default-margin-5">Token</h5>
            <input type="text" id="token" name="token"><br>
        </div>

        <button type="submit" class="button-blue">Login</button>
    </form>
{{/if}}

<script>
    const url = new URL(location.href);
    const params = new URLSearchParams(url.search);

    window.onload = function() {
        for(const object of document.getElementsByClassName('botSelection')) {
            object.setAttribute('onchange', 'window.location.pathname = this.value');
        }
    }
</script>
